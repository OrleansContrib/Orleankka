<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
  
  <PropertyGroup>
    <PackageId>Orleankka.Runtime.Legacy</PackageId>
    <RootNamespace>Orleankka.Legacy</RootNamespace>
    <Title>Orleankka.Runtime 1.x legacy api and features</Title>
