  <ItemGroup>
    <PackageReference Include="Microsoft.Orleans.OrleansCodeGenerator" Version="$(MicrosoftOrleansCodeGeneratorVersion)" />
    <PackageReference Include="Microsoft.Orleans.OrleansRuntime" Version="$(MicrosoftOrleansRuntimeVersion)" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Orleankka.Legacy\Orleankka.Legacy.csproj" />
    <ProjectReference Include="..\Orleankka.Runtime\Orleankka.Runtime.csproj" />
    <ProjectReference Include="..\Orleans.Internals\Orleans.Internals.csproj" />
  </ItemGroup> 
  
</Project>